<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22dp"
        android:background="#ffff"
        android:orientation="vertical"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="CAI"
                    android:textSize="11sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:id="@+id/txtTipoCentro"
                    android:fontFamily="sans-serif-light"
                    android:text="CAI"
                    android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="11sp"
                    android:text="Nombres"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:id="@+id/txtNombres"
                    android:fontFamily="sans-serif-light"
                    android:textSize="13sp"
                    android:text="Nombres"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="11sp"
                    android:text="Apellidos"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtApellidos"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="13sp"
                    android:text="Apellidos"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Fecha Aprehension"
                    android:textSize="11sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:id="@+id/txtFechaAprehension"
                    android:fontFamily="sans-serif-light"
                    android:text="Fecha Aprehension"
                    android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Tiempo Sentencia"
                    android:textSize="11sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:id="@+id/txtTiempoSentencia"
                    android:fontFamily="sans-serif-light"
                    android:text="Tiempo Sentencia"
                    android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="11sp"
                    android:text="Fecha Cumplimiento 60% "/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtFechaCumplimiento60"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="13sp"
                    android:text="Fecha Cumplimiento 60% "/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Fecha Cumplimiento 80%"
                    android:textSize="11sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/txtFechaCumplimiento80"
                    android:text="Fecha Cumplimiento 80%"
                    android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Porcentaje Cumplimiento"
                    android:textSize="11sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:id="@+id/txtPorcentajeCumplimiento"
                    android:fontFamily="sans-serif-light"
                    android:text="Porcentaje Cumplimiento"
                    android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>