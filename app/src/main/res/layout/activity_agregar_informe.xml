<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controlador.Activity.EditarInformeAgregarActivity">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tema"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:id="@+id/tvTemaTaller"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:id="@+id/title_numero_taller"
                                android:layout_width="196dp"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Número de Taller: "/>
                        <TextView
                                android:layout_width="193dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvNumeroInforme"
                                android:drawableEnd="@drawable/ic_null"
                                android:inputType="number"
                                android:textSize="15dp"
                                android:hint="Número de Taller"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.design.widget.TextInputLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilFechaTaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:orientation="vertical">
                        <LinearLayout
                                android:layout_width="197dp"
                                android:layout_height="match_parent">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:text="Fecha: "/>
                            <TextView
                                    android:layout_width="148dp"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:id="@+id/tvFechaTaller"
                                    android:drawableEnd="@drawable/ic_today_black_24dp"
                                    android:textSize="15dp"
                                    android:hint="Fecha"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="198dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">
                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15dp"
                                        android:text="Hora Inicio: "/>
                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="15dp"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:drawableEnd="@drawable/ic_access_time_black_24dp"
                                        android:hint="Hora"
                                        android:id="@+id/tvHoraInicioTaller"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="188dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">
                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15dp"
                                        android:text="Hora Fin: "/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15dp"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:drawableEnd="@drawable/ic_access_time_black_24dp"
                                        android:hint="Hora"
                                        android:id="@+id/tvHoraFinTaller"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                    android:id="@+id/tvNumeroParticipantesTaller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número de total de participantes: 0"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Objetivo General: "
                        android:textSize="15dp"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Objetivo General"
                        android:textSize="15dp"
                        android:id="@+id/tvObjetivoTaller"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Antecedentes y justificación: "
                        android:textSize="15dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Antecedentes y justificación"
                        android:textSize="15dp"
                        android:id="@+id/etAntecendentesInforme"
                />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_items_informe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Desarrollo: "
                        android:textSize="15dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Desarrollo"
                        android:textSize="15dp"
                        android:id="@+id/etDesarrolloInforme"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Objetivos Específicos: "
                        android:textSize="15dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Objetivos Específicos"
                        android:textSize="15dp"
                        android:id="@+id/etObjetivosEspecificosInforme"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cierre y evaluación: "
                        android:textSize="15dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cierre y evaluación"
                        android:textSize="15dp"
                        android:id="@+id/etCierreInforme"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conclusiones: "
                        android:textSize="15dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Conclusiones"
                        android:textSize="15dp"
                        android:id="@+id/etConclusionesInforme"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recomendaciones: "
                        android:textSize="15dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Recomendaciones"
                        android:textSize="15dp"
                        android:id="@+id/etRecomendacionesInforme"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Observaciones: "
                        android:textSize="15dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Observaciones"
                        android:textSize="15dp"
                        android:id="@+id/etObservacionesInforme"
                />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_agregar_fotograficas_informe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:tooltipText="Agregar fotografías"
            android:src="@drawable/ic_add"/>

</android.support.design.widget.CoordinatorLayout>