<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        tools:context=".Controlador.Activity.EditarInformeActivity">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tema"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_marginBottom="13sp"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/tvTemaTaller"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Número de Taller:  "
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNumeroInforme"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginBottom="10sp"
                        android:text="Número de Taller"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:text="Fecha:  "/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/tvFechaTaller"
                        android:textSize="14sp"
                        android:paddingRight="20sp"
                        android:text="Fecha"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp"
                            android:text="Hora Inicio:  "/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:id="@+id/tvHoraInicioTaller"
                            android:textSize="14sp"
                            android:paddingRight="20sp"
                            android:text="Hora Inicio"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Hora Fin:  "
                            android:paddingLeft="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-light"
                            android:text="Hora Fin"
                            android:id="@+id/tvHoraFinTaller"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número Total  Participantes:  "
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"
                />
                <TextView
                        android:id="@+id/tvNumeroParticipantesTaller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Número de Adolescentes"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp"
                />

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objetivos"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No se han agregado objetivos"
                    android:id="@+id/tvObjetivoTaller"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-light"
            />


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_items_informe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Antecedentes y justificación: "
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Antecedentes y justificación"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/etAntecendentesInforme"
            />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Desarrollo: "
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Desarrollo"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/etDesarrolloInforme"
            />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objetivos Específicos: "
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Objetivos Específicos"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/etObjetivosEspecificosInforme"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cierre y evaluación: "
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cierre y evaluación"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/etCierreInforme"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conclusiones: "
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Conclusiones"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/etConclusionesInforme"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recomendaciones: "
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Recomendaciones"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/etRecomendacionesInforme"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Observaciones: "
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observaciones"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/etObservacionesInforme"
            />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_agregar_fotograficas_informe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:tooltipText="Agregar fotografías"
            android:src="@drawable/ic_next"/>

</android.support.design.widget.CoordinatorLayout>