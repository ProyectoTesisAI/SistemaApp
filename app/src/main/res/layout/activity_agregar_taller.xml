<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Controlador.Activity.TallerAgregarActivity">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tema"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:id="@+id/etTemaTallerCrear"
                />
            </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilNumeroTaller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/etNumeroTallerCrear"
                            android:drawableEnd="@drawable/ic_null"
                            android:inputType="number"
                            android:textSize="15dp"
                            android:hint="Número de Taller" android:layout_alignStart="@+id/tilNumeroTaller"
                            android:layout_alignBottom="@+id/tilNumeroTaller"/>

                </android.support.design.widget.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilFechaTaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:id="@+id/etFechaTallerCrear"
                            android:drawableEnd="@drawable/ic_today_black_24dp"
                            android:textSize="15dp"
                            android:hint="Fecha"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawableEnd="@drawable/ic_access_time_black_24dp"
                            android:hint="Hora"
                            android:id="@+id/etHoraTallerCrear"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog"
                        android:layout_weight="1"
                        android:prompt="@string/prompTipoCentro"
                        android:id="@+id/spTipoCentro"
                        android:textAlignment="viewStart"/>

                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:spinnerMode="dropdown"
                        android:id="@+id/spUdiCai"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/txtNumeroParticipantesTallerCrear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de Adolescentes: 0"
            />



            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Objetivo"
                        android:textSize="15dp"
                        android:id="@+id/etObjetivoTallerCrear"
                />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Recomendaciones"
                        android:textSize="15dp"
                        android:id="@+id/etRecomendacionesTallerCrear"
                />
            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_items_taller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_agregar_item_taller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:tooltipText="Agregar Actividad"
            android:src="@drawable/ic_add"/>

</android.support.design.widget.CoordinatorLayout>