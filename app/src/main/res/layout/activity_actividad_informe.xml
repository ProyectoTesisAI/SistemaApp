<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#ffff"
        android:layout_marginBottom="8dp">


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="3sp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Actividad: "
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtItemActividadI"
                                android:gravity="start"
                                android:hint="Actividad"
                                android:layout_marginTop="-1sp"
                                android:fontFamily="sans-serif-light"
                                android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="3sp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Objetivo: "
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtItemObjetivoI"
                                android:textSize="12sp"
                                android:layout_marginTop="-1sp"
                                android:fontFamily="sans-serif-light"
                                android:hint="Objetivo"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="3sp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Materiales: "
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingBottom="5px"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtItemMaterialesI"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-light"
                                android:hint="Materiales"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="3sp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Responsable: "
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingBottom="5px"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtItemResponsableI"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-light"
                                android:hint="Responsable"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="DuraciÃ³n: "
                                android:textSize="13sp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingBottom="5px"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtItemDuracionI"
                                android:inputType="number"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-light"
                                android:hint="Duracion"/>
                </LinearLayout>
</LinearLayout>