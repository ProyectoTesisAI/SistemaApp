<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login_activity"
        android:orientation="vertical"
        tools:context=".Controlador.Activity.LoginActivity">

    <android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_gravity="center_vertical|center_horizontal"
                  >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="40dp"
                    android:textSize="40sp"
                    android:textColor="#333C46"
                    android:textStyle="bold"
                    android:text="SISTEMA SNAI"/>
            <EditText
                    android:id="@+id/user_login"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:ems="50"
                    android:hint="@string/prompt_user"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="17sp" android:fontFamily="sans-serif-light"/>

            <EditText
                    android:id="@+id/password_login"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_https_black_24dp"
                    android:ems="10"
                    android:hint="@string/prompt_password"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textSize="17sp" android:fontFamily="sans-serif-light"/>
            <Button
                    android:id="@+id/btn_acceder_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_login"
                    android:textAllCaps="false"
                    android:textSize="21sp"
                    android:fontFamily="sans-serif-medium"
                    android:focusable="auto"
                    style="@android:style/Widget.Holo.Button.Small" android:background="@drawable/borde_boton"/>

        </LinearLayout>

        <ProgressBar
                android:id="@+id/pbLogin"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:visibility="invisible"

        />
    </android.support.design.widget.CoordinatorLayout>





</ScrollView>